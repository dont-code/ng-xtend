{
  "name": "xt-host",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build xt-host --configuration=development",
    "build-deploy": "APP=xt-host && ng build $APP --configuration=$BUILD --output-path=\"../../dist/$STAGE/$APP\" --base-href=\"https://test.dont-code.net/apps/$STAGE/$APP/\" && rm -f ../../dist/$STAGE/$APP/*.* && mv ../../dist/$STAGE/$APP/browser/* ../../dist/$STAGE/$APP",
    "watch": "ng build --watch --configuration development",
    "test": "cd projects/host && ../../node_modules/.bin/vitest"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^19.2.10",
    "@angular/common": "^19.2.10",
    "@angular/compiler": "^19.2.10",
    "@angular/core": "^19.2.10",
    "@angular/forms": "^19.2.10",
    "@angular/platform-browser": "^19.2.10",
    "@angular/platform-browser-dynamic": "^19.2.10",
    "@angular/router": "^19.2.10",
    "xt-components": "workspace:^",
    "xt-plugin-default": "workspace:^",
    "xt-plugin-web": "workspace:^",
    "xt-type": "workspace:^",
    "xt-store": "workspace:^",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "primeng": "^19.1.3",
    "@primeuix/utils": "^0.5.3",
    "@primeuix/styled": "^0.6.4",
    "primeicons": "^7.0.0",
    "@primeng/themes": "^19.1.3",
    "tailwindcss": "~4.1.8",
    "@ngrx/signals": "^19.2.1",
    "@angular-architects/native-federation": "^19.0.23",
    "@softarc/native-federation-runtime": "^3.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "~4.1.8",
    "postcss": "~8.5.4",
    "@angular-devkit/build-angular": "^19.2.11",
    "@angular/cli": "^19.2.11",
    "@angular/compiler-cli": "^19.2.10",
    "ng-packagr": "^19.2.2",
    "typescript": "^5.7.3",
    "happy-dom": "^17.5.6",
    "@analogjs/vite-plugin-angular":"^1.17.1",
    "@analogjs/vitest-angular": "^1.17.1",
    "jsdom": "^26.1.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "vite-tsconfig-paths": "~5.1.4"
  }
}
