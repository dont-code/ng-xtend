{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"cli": {
		"packageManager": "pnpm",
		"analytics": "aa50d3e8-3b23-4c0b-886c-589e9f92b5bc",
		"cache": {
			"enabled": true
		}
	},
	"newProjectRoot": "projects",
	"projects": {
		"sample": {
			"projectType": "library",
			"root": "projects/sample",
			"sourceRoot": "projects/sample/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "projects/sample/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/sample/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "projects/sample/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "development"
				},
				"test": {
					"builder": "@analogjs/vitest-angular:test",
					"options": {
						"tsConfig": "projects/sample/tsconfig.spec.json",
						"polyfills": []
					}
				}
			}
		},
		"sample-plugin": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "css"
				}
			},
			"root": "projects/sample-plugin",
			"sourceRoot": "projects/sample-plugin/src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular-architects/native-federation:build",
					"options": {},
					"configurations": {
						"production": {
							"target": "sample-plugin:esbuild:production"
						},
						"development": {
							"target": "sample-plugin:esbuild:development",
							"dev": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-architects/native-federation:build",
					"options": {
						"target": "sample-plugin:serve-original:development",
						"rebuildDelay": 0,
						"dev": true,
						"port": 0
					}
				},
				"esbuild": {
					"builder": "@angular-devkit/build-angular:application",
					"options": {
						"outputPath": "dist/xt-sample-plugin",
						"index": "projects/sample-plugin/src/index.html",
						"browser": "projects/sample-plugin/src/main.ts",
						"preserveSymlinks": true,
						"polyfills": [
							"es-module-shims"
						],
						"tsConfig": "projects/sample-plugin/tsconfig.app.json",
						"inlineStyleLanguage": "css",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/sample-plugin/public"
							}
						],
						"styles": [
							"projects/sample-plugin/src/styles.css"
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kB",
									"maximumError": "1MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "2kB",
									"maximumError": "4kB"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "development"
				},
				"serve-original": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "sample-plugin:esbuild:production"
						},
						"development": {
							"buildTarget": "sample-plugin:esbuild:development"
						}
					},
					"defaultConfiguration": "development",
					"options": {
						"port": 4201
					}
				},
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@analogjs/vitest-angular:test",
          "options": {
            "polyfills": [],
            "tsConfig": "projects/sample-plugin/tsconfig.spec.json",
            "inlineStyleLanguage": "css",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/sample-plugin/public"
              }
            ],
            "styles": [
              "projects/sample-plugin/src/styles.css"
            ],
            "scripts": []
          }
        }
      }
		}
	}
}
