{
  "name": "xt-plugin-intl",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build intl --configuration=development",
    "build-deploy": "APP=intl-tester && MAIN_LIB=intl && ng build $MAIN_LIB --configuration=$BUILD && ng build $APP --configuration=$BUILD --output-path=\"../../dist/$STAGE/$APP\" --base-href=\"https://test.dont-code.net/apps/$STAGE/$APP/\"  && rm -f ../../dist/$STAGE/$APP/*.* && mv ../../dist/$STAGE/$APP/browser/* ../../dist/$STAGE/$APP",
    "watch": "ng build --watch --configuration=development",
    "test": "cd projects/intl && ../../node_modules/.bin/vitest && cd ../intl-tester && ../../node_modules/.bin/vitest"

  },
  "publishConfig": {
    "directory": "dist/xt-plugin-intl",
    "linkDirectory": true
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^20.2.3",
    "@angular/common": "^20.2.3",
    "@angular/compiler": "^20.2.3",
    "@angular/core": "^20.2.3",
    "@angular/forms": "^20.2.3",
    "@angular/platform-browser": "^20.2.3",
    "@angular/platform-browser-dynamic": "^20.2.3",
    "@angular/router": "^20.2.3",
    "@angular/cdk": "^20.2.1",
    "xt-components": "workspace:^",
    "xt-type": "workspace:^",
    "rxjs": "^7.8.2",
    "primeng": "^20.0.1",
    "es-module-shims": "^2.6.2",
    "primeicons": "^7.0.0",
    "@primeuix/utils": "^0.6.1",
    "@primeuix/styled": "^0.7.2",
    "@primeng/themes": "^20.0.1",
    "tslib": "^2.8.1",
    "@angular-architects/native-federation": "^20.1.6",
    "@softarc/native-federation-runtime": "^3.3.5",
    "tailwindcss": "~4.1.12",
    "countries-ts": "~2.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "~4.1.12",
    "postcss": "~8.5.6",
    "@angular-devkit/build-angular": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@angular/compiler-cli": "^20.2.3",
    "ng-packagr": "^20.2.0",
    "typescript": "^5.9.2",
    "happy-dom": "^18.0.1",
    "@analogjs/vite-plugin-angular":"^1.20.1",
    "@analogjs/vitest-angular": "^1.20.1",
    "jsdom": "^26.1.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "vite-tsconfig-paths": "~5.1.4"
  }
}
